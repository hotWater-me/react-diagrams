{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "../",
		"paths": {
			"@projectstorm/react-diagrams": ["./packages/react-diagrams/dist/@types/index"],
			"@projectstorm/react-diagrams-core": ["./packages/react-diagrams-core/dist/@types/index"]
		},
		"suppressExcessPropertyErrors": true,
		"declaration": true,
		"composite": true,
		"incremental": true,
		"strictNullChecks": false,
		"sourceMap": true,
		"skipLibCheck": true,
		"jsx": "react",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "Node",
		"strict": false,
		"lib": ["DOM", "ES6"]
	},
	"include": ["demos"]
}
